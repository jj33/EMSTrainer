{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://emstrainer/schema/module_toggles.schema.json",
  "title": "Module Toggles",
  "type": "object",
  "properties": {
    "curveball": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "peds_ob_fatal": {
      "type": "object",
      "properties": {
        "default": {
          "type": "boolean"
        }
      }
    },
    "time_pressure": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "monica_seed": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ]
    },
    "distractions": {
      "type": "object",
      "properties": {
        "enabled_default": {
          "type": "boolean"
        },
        "monica_forced": {
          "type": "boolean"
        },
        "monica_severity_bias": {
          "type": "object",
          "properties": {
            "low": {
              "type": "number"
            },
            "medium": {
              "type": "number"
            },
            "high": {
              "type": "number"
            }
          },
          "required": [
            "low",
            "medium",
            "high"
          ]
        },
        "profiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "weight": {
                "type": "integer",
                "minimum": 1
              },
              "cooldown_sec": {
                "type": "integer",
                "minimum": 0
              },
              "examples": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "severity": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high"
                ]
              }
            },
            "required": [
              "id",
              "weight"
            ]
          }
        }
      },
      "required": [
        "enabled_default",
        "monica_forced",
        "monica_severity_bias"
      ]
    },
    "latency_tracking": {
      "type": "object",
      "properties": {
        "enabled_default": {
          "type": "boolean"
        },
        "monica_forced": {
          "type": "boolean"
        },
        "normal_ignored": {
          "type": "boolean"
        },
        "actions": {
          "type": "array"
        },
        "penalties": {
          "type": "object",
          "properties": {
            "warn": {
              "type": "integer"
            },
            "fail": {
              "type": "integer"
            }
          },
          "required": [
            "warn",
            "fail"
          ]
        }
      },
      "required": [
        "enabled_default",
        "monica_forced",
        "normal_ignored",
        "actions",
        "penalties"
      ]
    },
    "auto_redact": {
      "type": "object",
      "properties": {
        "monica_default": {
          "type": "boolean"
        },
        "normal_default": {
          "type": "boolean"
        },
        "hard_default": {
          "type": "boolean"
        }
      },
      "required": [
        "monica_default",
        "normal_default",
        "hard_default"
      ]
    }
  },
  "additionalProperties": true
}