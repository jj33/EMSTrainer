{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://emstrainer/schema/provider_levels.schema.json",
  "title": "Provider Levels Local Scope Overrides",
  "description": "Local jurisdiction scope customization for provider levels",
  "type": "object",
  "properties": {
    "jurisdiction": {
      "type": "string",
      "description": "Name of jurisdiction or agency"
    },
    "provider_levels": {
      "type": "object",
      "description": "Provider level definitions with local modifications",
      "patternProperties": {
        "^(EMR|EMT|AEMT|Paramedic|ACP|CCP)$": {
          "type": "object",
          "properties": {
            "base": {
              "type": "string",
              "enum": ["EMR_national", "EMT_national", "AEMT_national", "Paramedic_national", "ACP_national", "CCP_national"],
              "description": "National standard baseline to start from"
            },
            "add_skills": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Additional skills beyond national standard"
            },
            "remove_skills": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Skills restricted below national standard"
            },
            "notes": {
              "type": "string",
              "description": "Explanation of local variations"
            }
          },
          "required": ["base"]
        }
      }
    }
  },
  "required": ["jurisdiction", "provider_levels"]
}
