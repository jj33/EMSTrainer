{
  "policy": {
    "mode": "monica",
    "enforce_time": true,
    "show_feedback": true,
    "provider_level": "EMT",
    "fatality_policy": "strict",
    "tone": "concise"
  },
  "segments": [
    {
      "id": "on_scene_time",
      "start_event": "arrive_scene",
      "end_event": "depart_scene",
      "targets": {
        "target_sec": 600,
        "hard_max_sec": 900
      },
      "comment": "Keep on-scene time \u226410:00; >15:00 unacceptable in time-critical cases.",
      "penalty_only": false
    },
    {
      "id": "time_to_first_epi",
      "start_event": "recognize_anaphylaxis",
      "end_event": "epi_administered",
      "targets": {
        "target_sec": 180,
        "hard_max_sec": 300
      },
      "comment": "Prompt epinephrine improves outcomes in anaphylaxis.",
      "penalty_only": false
    },
    {
      "id": "time_to_transport_decision",
      "start_event": "recognize_anaphylaxis",
      "end_event": "transport_decision",
      "targets": {
        "target_sec": 240,
        "hard_max_sec": 420
      },
      "comment": "Decide on transport early once critical condition is recognized.",
      "penalty_only": true
    },
    {
      "id": "arrest_time_to_tor_call",
      "start_event": "arrest_recognized",
      "end_event": "med_director_tor_consult",
      "targets": {
        "target_sec": 1200,
        "hard_max_sec": 1500
      },
      "comment": "Consult for ToR within 20\u201325 minutes when appropriate.",
      "penalty_only": false
    }
  ],
  "consequences": {
    "on_fail": "end_scenario",
    "on_warn": "feedback_only"
  }
}