{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EMSTrainer Scenario (plaintext, pre-encryption)",
  "type": "object",
  "required": [
    "spec_version", "type", "scenario_id", "title", "author",
    "created_at_utc", "difficulty", "tags", "vitals_trend",
    "assessment_points", "expected_interventions", "rubric", "policy"
  ],
  "properties": {
    "spec_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
    "type":         { "const": "scenario" },
    "scenario_id":  { "type": "string", "pattern": "^[A-Z0-9-_.]{3,}$" },
    "title":        { "type": "string", "minLength": 3 },
    "author":       { "type": "string", "minLength": 1 },
    "created_at_utc": { "type": "string", "format": "date-time" },
    "difficulty":   { "type": "string", "enum": ["intro", "beginner", "intermediate", "advanced"] },
    "run_id":       { "type": "string" },
    "tags":         { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "vitals_trend": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["t", "hr", "rr", "spo2", "bp_sys", "bp_dia", "etco2"],
        "properties": {
          "t":       { "type": "number", "minimum": 0 },
          "hr":      { "type": "number", "minimum": 0, "maximum": 260 },
          "rr":      { "type": "number", "minimum": 0, "maximum": 80 },
          "spo2":    { "type": "number", "minimum": 0, "maximum": 100 },
          "bp_sys":  { "type": "number", "minimum": 40, "maximum": 300 },
          "bp_dia":  { "type": "number", "minimum": 20, "maximum": 180 },
          "etco2":   { "type": "number", "minimum": 0, "maximum": 120 }
        },
        "additionalProperties": false
      }
    },
    "assessment_points": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "prompt", "max_points"],
        "properties": {
          "id":         { "type": "string", "pattern": "^[A-Z0-9-_.]+$" },
          "prompt":     { "type": "string", "minLength": 5 },
          "max_points": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "expected_interventions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "window_s", "points"],
        "properties": {
          "id":       { "type": "string", "pattern": "^[A-Z0-9-_.]+$" },
          "name":     { "type": "string", "minLength": 2 },
          "dose":     { "type": "string" },
          "window_s": {
            "type": "array",
            "items": { "type": "number", "minimum": 0 },
            "minItems": 2, "maxItems": 2
          },
          "points":   { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "rubric": { "$ref": "./rubric.schema.json" },
    "policy": {
      "type": "object",
      "required": ["late_window_s", "clock_skew_s", "pediatric_ob_policy"],
      "properties": {
        "late_window_s":        { "type": "number", "minimum": 0 },
        "clock_skew_s":         { "type": "number", "minimum": 0 },
        "pediatric_ob_policy":  { "type": "string" }
      },
      "additionalProperties": false
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "media_type", "b64"],
        "properties": {
          "name":       { "type": "string" },
          "media_type": { "type": "string", "pattern": "^[a-zA-Z0-9]+/[a-zA-Z0-9-+.]+$" },
          "b64":        { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
